{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "rootDir": "./",
        "baseUrl": "./",
        "paths": {
            "*": ["node_modules/*", "src/types/*"],
            "e2e/*": ["e2e/*"]
        }
    },
    "include": [
        "artillery/**/*.ts",
        "e2e/**/*.ts",
        "artillery/artillery-playwright-preprocessor.ts",
        "artillery/tests/login-logout.spec.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}